---
interface Props {
  title: string;
  date: Date;
  description: string;
  category: string;
  image?: string;
  slug: string;
}

const { title, date, description, category, image, slug } = Astro.props;

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});
---

<a href={`/blog/${slug}/`} class="group block">
  <article class="bg-surface border border-border rounded-xl overflow-hidden hover:border-primary/30 transition-all duration-300 h-full flex flex-col">
    {image && (
      <div class="aspect-video overflow-hidden">
        <img
          src={image}
          alt={title}
          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
          loading="lazy"
        />
      </div>
    )}
    <div class="p-5 flex flex-col flex-1">
      <div class="flex items-center gap-3 mb-3">
        <span class="px-2.5 py-0.5 text-xs font-semibold uppercase tracking-wider bg-primary/10 text-primary rounded-full">
          {category}
        </span>
        <time datetime={date.toISOString()} class="text-xs text-text-muted">
          {formattedDate}
        </time>
      </div>
      <h3 class="text-lg font-bold mb-2 group-hover:text-primary transition-colors line-clamp-2">
        {title}
      </h3>
      <p class="text-sm text-text-secondary line-clamp-3 flex-1">
        {description}
      </p>
      <div class="mt-4 text-sm font-medium text-primary group-hover:text-primary-light transition-colors flex items-center gap-1">
        Read more
        <svg xmlns="http://www.w3.org/2000/svg" class="w-3.5 h-3.5 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M14 5l7 7m0 0l-7 7m7-7H3" />
        </svg>
      </div>
    </div>
  </article>
</a>
